@model MailContainerTest.Core.Types.MakeMailTransferRequest

@{
    ViewData["Title"] = "Mail Transfer";
}
<h1>@ViewData["Title"]</h1>

<form>
    <div asp-validation-summary="ModelOnly"></div>
    <div class="container">
        <div class="col-md-12">
            <label asp-for="@Model.SourceMailContainerNumber"></label>: 
            <input asp-for="@Model.SourceMailContainerNumber" type="text">
        </div>
        <div class="col-md-12">
            <label asp-for="@Model.DestinationMailContainerNumber"></label>: 
            <input asp-for="@Model.DestinationMailContainerNumber" type="text">
        </div>
        <div class="col-md-12">            
            <label asp-for="@Model.NumberOfMailItems"></label>: 
            <input asp-for="@Model.NumberOfMailItems" type="number">
        </div>
        <div class="col-md-12">
            <label asp-for="@Model.TransferDate"></label>: 
            <input asp-for="@Model.TransferDate" type="datetime">
        </div>
        <div class="col-md-12">
            <label asp-for="@Model.MailType"></label>: 
            <select asp-for="@Model.MailType" 
                    asp-items="Html.GetEnumSelectList<MailContainerTest.Core.Types.MailType>()"></select>
        </div>
    </div>
</form>


